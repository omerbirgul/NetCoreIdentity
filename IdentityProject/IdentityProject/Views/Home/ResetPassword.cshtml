@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ResetPassword</h1>

@if(TempData["Success"] != null)
{
    <div class="alert alert-info" role="alert">
        @TempData["Success"]
    </div>
}



<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"> </div>

<form asp-action="ResetPassword" asp-controller="Home" method="post">


    <div class="form-group">
        <input type="hidden" name="UserId" value="@TempData["UserId"]" />
        <input type="hidden" name="Token" value="@TempData["Token"]" />

        <label for="NewPassword">New Password:</label>
        <input type="text" class="form-control" asp-for="NewPassword" placeholder="Password">
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="NewPasswordConfirm">Password Confirm:</label>
        <input type="text" class="form-control" asp-for="NewPasswordConfirm" placeholder="New Password Confirm">
        <span asp-validation-for="NewPasswordConfirm" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
